# $Id$
# rivet page used with Rivet's rivet1-test

load_env ENVS
load_cookies COOKIES

headers setcookie -name mod -value rivet -expires 01-01-2003 

# hello-1.1
puts "Hello, World\n"

# i18n-1.1
puts "      - El Burro Sabe Ms Que T!\n"

if { [ var number ] > 0 } {
    # get/post variables 1.1
    if { [ var exists foobar ] } {
	puts "\[var get foobar\] = [var get foobar]\n"
    }
    # get/post variables 1.{2,3}
    if { [ var exists Ms ] } {
	puts "\[var get Ms\] = [var get Ms]\n"
    }
}

# env
puts "env(DOCUMENT_NAME) = $env(DOCUMENT_NAME)\n"

# cookies
if { [ array exists cookies ] } {
    foreach { ck } [ array names cookies ]  {
        puts "cookies($ck) = $cookies($ck)\n"
    }
}

